<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationInsert">
		<xpath>Defs/ThinkTreeDef[defName = "RSPeacekeeper"]/thinkRoot[@Class = "ThinkNode_Priority"]/subNodes/li[@Class="ThinkNode_QueuedJob"]</xpath> <!--Priority is important here, hence the insert after this specific subNode--> 
		<value> 
			 <!-- Do search and destroy instead of waiting -->
			<li Class="SearchAndDestroy.ThinkNode_ConditionalSearchAndDestroy">
			  <subNodes>
				<li Class="ThinkNode_Priority">
				  <subNodes>
				    <li Class="JobGiver_MoveToStandable"/>
					<li Class="JobGiver_AIFightEnemies">
					  <targetAcquireRadius>200</targetAcquireRadius>
					  <targetKeepRadius>32</targetKeepRadius>
					</li>
					<li Class="JobGiver_AIGotoNearestHostile" />
				  </subNodes>
				</li>
			  </subNodes>
			</li>
		</value>
	</Operation>
</Patch>